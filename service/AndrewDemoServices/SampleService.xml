<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">
	<!-- verb and noun are arbitrary. location is folder name and file name. -->
	<service verb="run" noun="Logger" type="java" location="com.mk.moqui.sample.Sample" method="logger">
		<in-parameters>
			<parameter name="firstName"/>
			<parameter name="lastName"/>
		</in-parameters>
		<out-parameters>
			<parameter name="firstName"/>
			<parameter name="lastName"/>
		</out-parameters>
		<actions>
		</actions>
	</service>
</services>
